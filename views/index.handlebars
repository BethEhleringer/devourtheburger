<div class="jumbotron">
<div class="row">
     <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
     <img src="/assets/img/devourBurger2.jpg"/> 
     </div>
     <div class="col-lg-10 col-md-9 col-sm-8 col-xs-12">
     <h1 style="vertical-align: middle">DEVOUR THE BURGER!</h1></div>
 </div>
 </div>
<div class="container">

    
 
 
    <div class="row">
        <div class="col-md-6 col-sm-12">
<h2>Available Burgers</h2>
<ol>
    {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false }}
        {{/unless}}
    {{/each}}
</ol>
</div>
<div class="col-md-6 col-sm-12">
<h2>Burgers that have been devoured</h2>
<ol>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/devoured-burger-block devoured=true}}
    {{/if}}
    {{/each}}
</ol>
</div>

<div class="row"><div class="col-lg-12">
<h2>Add a Burger</h2>
</div></div>
<div class="row"><div class="col-lg-12">

<form class="create-form">

    <div class="form-group">
        <label for="burger-name">Burger Name:</label>
        <input type="text" id="burger-name" name="burger_name">
    </div>

   <div class="form-group">
        <label for="devoured">Devoured?</label>
        <input type="radio" name="devoured" value="1" > Devoured<br>
    <input type="radio" name="devoured" value="0" checked> Not devoured
    </div> 

    <button type="submit">Add Burger</button>
</form></div>
</div> </div></div>

